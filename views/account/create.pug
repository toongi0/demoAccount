doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Create New Account
    body 
        h1 Create New Account 
        if errors 
            ul 
                each error in errors 
                    li(style="color:red")=error.msg
        form(action="/account/create", method="post", enctype="multipart/form-data")
            div 
                label(for="email") Email 
                input(name="email", id="email") 
                if errors 
                    each error in errors 
                        if error.path==='email'
                            span(style="color:red")=error.msg
            div 
                label(for="password") Password 
                input(name="password", id="password", type="password")
                if errors 
                    each error in errors 
                        if error.path==='password'
                            span(style="color:red")=error.msg
            div 
                label(for="confirm") Confirm 
                input(name="confirm", id="confirm", type="password")
                if errors 
                    each error in errors 
                        if error.path==='confirm'
                            span(style="color:red")=error.msg
            div 
                label(for="phone") Phone 
                input(name="phone", id="phone") 
            div 
                label(for="image") Image
                input(name="image", id="image", type="file")
            div 
                input(type="submit", value="Create Account")